# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 99
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{css,html,js,yml,yaml}]
indent_size = 2

[Vagrantfile]
indent_size = 2

[Makefile]
indent_style = tab
